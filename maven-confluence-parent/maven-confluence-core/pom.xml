<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>maven-confluence-parent</artifactId>
    <groupId>org.bsc.maven</groupId>
    <version>1.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.bsc.maven</groupId>
  <artifactId>maven-confluence-core</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>maven confluence plugin - core</name>

  <scm>
	<developerConnection>scm:svn:https://maven-confluence-plugin.googlecode.com/svn/trunk/maven-confluence-parent/maven-confluence-core</developerConnection>
	<url>https://maven-confluence-plugin.googlecode.com/svn/trunk/maven-confluence-parent/maven-confluence-core</url>
  </scm>
  
  <profiles>
  	<profile>
  		<id>fix-deps</id>
  <build>
  	<plugins>
  		<plugin>
  			<artifactId>maven-deploy-plugin</artifactId>
  			<executions>		
  				<execution>
  					<phase>package</phase>
  					<goals>
  						<goal>deploy-file</goal>
  					</goals>
  					<configuration>
  						<file>${localRepository}/miniTemplator/miniTemplator/1.0/miniTemplator-1.0.jar</file>
  						<repositoryId>${release.repo.id}</repositoryId>
  						<url>${release.repo.url</url>
				  		<groupId>miniTemplator</groupId>
				  		<artifactId>miniTemplator</artifactId>
				  		<version>1.0</version>
				  		<packaging>jar</packaging>
  					</configuration>
  				</execution>
  			</executions>
  		</plugin>
  	</plugins>
  </build>
  	</profile>
  </profiles>
  <dependencies>
  	<dependency>
  		<groupId>org.codehaus.swizzle</groupId>
  		<artifactId>swizzle-confluence</artifactId>
  		<version>1.1</version>
  	</dependency>
  	<dependency>
  		<groupId>miniTemplator</groupId>
  		<artifactId>miniTemplator</artifactId>
  		<version>1.0</version>
  	</dependency>
  </dependencies>
</project>