<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.bsc.maven</groupId>
  <artifactId>maven-confluence-parent</artifactId>
  <packaging>pom</packaging>
  <version>1.3.1-SNAPSHOT</version>
  <name>maven confluence plugin - parent</name>
  
  <properties>
    <snapshot.repo.id>google-project</snapshot.repo.id>
    <snapshot.repo.url>svn:https://maven-confluence-plugin.googlecode.com/svn/mavenrepo</snapshot.repo.url>
    <release.repo.id>java.net-m2-repository</release.repo.id>
    <release.repo.url>java-net:/maven2-repository/trunk/repository/</release.repo.url>
    
	<!-- SCM properties  -->
	<addTimestamp>true</addTimestamp>
	<tag>${pom.artifactId}-${pom.version}</tag>
	<tagBase>https://maven-confluence-plugin.googlecode.com/svn/tags</tagBase>
    
    <jfrog.maven-plugin-anno.version>1.3.3</jfrog.maven-plugin-anno.version>

    <mavenVersion>2.0.6</mavenVersion>
    <doxiaVersion>1.0</doxiaVersion>
    <doxia-sitetoolsVersion>1.0</doxia-sitetoolsVersion>
    <pluginToolsVersion>2.6</pluginToolsVersion>
  </properties>

<profiles>
      <profile>
          <id>macosx</id>
          <activation>
              <os>
                  <family>mac</family>
              </os>
          </activation>
			<properties>
			  	<java.rt.systemPath>/System/Library/Frameworks/JavaVM.Framework/Versions/CurrentJDK/Home/lib/dt.jar</java.rt.systemPath>
			</properties>
 	 </profile>
 	   
     <profile>
        <id>other-so</id>
        <activation>
          <activeByDefault>true</activeByDefault>
        </activation>
		<properties>
	  		<java.rt.systemPath />
		</properties>
	</profile>
</profiles>			

  <scm>
	<developerConnection>scm:svn:https://maven-confluence-plugin.googlecode.com/svn/trunk/maven-confluence-parent</developerConnection>
	<url>https://maven-confluence-plugin.googlecode.com/svn/trunk/maven-confluence-parent</url>
  </scm>

    <repositories>
  	<repository>
  		<id>jfrog</id>
  		<name>jfrog</name>
  		<url>http://www.jfrog.org/artifactory/plugins-releases-local</url>
  		<snapshots>
  			<enabled>false</enabled>
  		</snapshots>
  	</repository>
  </repositories>

  <pluginRepositories>
  	<pluginRepository>
  		<id>jfrog</id>
  		<name>jfrog</name>
  		<url>http://www.jfrog.org/artifactory/plugins-releases-local</url>
  		<snapshots>
  			<enabled>false</enabled>
  		</snapshots>
  	</pluginRepository>
  </pluginRepositories>

  <build>
  	<plugins>
	<plugin>
	  <artifactId>maven-compiler-plugin</artifactId>
	  <configuration>
	    <source>1.5</source>
	    <target>1.5</target>
	  </configuration>
	</plugin>
  	</plugins>
  	
	<extensions>
	
	      <extension>
	        <groupId>org.jvnet.wagon-svn</groupId>
	        <artifactId>wagon-svn</artifactId>
	        <version>1.8</version>	
	      </extension>
	
	</extensions>  	
  </build>
  <modules>
  	<module>maven-confluence-core</module>
  	<!--module>maven-confluence-reporting-plugin-plugin</module-->
  	<module>maven-confluence-reporting-plugin</module>
  </modules>
  
  <distributionManagement>
  	
    <repository>
      <id>${release.repo.id}</id>
      <name>central</name>
      <url>${release.repo.url}</url>
    </repository>
    <snapshotRepository>
      <id>${snapshot.repo.id}</id>
      <name>snapshots</name>
      <url>${snapshot.repo.url}</url>
    </snapshotRepository>
    <site>
    </site>

  </distributionManagement>
  
</project>