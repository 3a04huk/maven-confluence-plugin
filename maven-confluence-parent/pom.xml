<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.bsc.maven</groupId>
  <artifactId>maven-confluence-parent</artifactId>
  <packaging>pom</packaging>
  <version>3.2.4-SNAPSHOT</version>
  <name>maven confluence plugin parent - ${project.version}</name>
  
  <properties>
  
	<!-- 
	================
	GOOGLE REPO 
	================
    <snapshot.repo.id>google-project</snapshot.repo.id>
    <snapshot.repo.url>svn:https://maven-confluence-plugin.googlecode.com/svn/mavenrepo</snapshot.repo.url>
	-->

	<!-- 
	================
	JAVANET REPO 
	================
    <release.repo.id>java.net-m2-repository</release.repo.id>
    <release.repo.url>java-net:/maven2-repository/trunk/repository/</release.repo.url>
	-->

	<!-- 
	================
	SONATYPE REPO 
	================
	-->
    <snapshot.repo.id>sonatype-repo</snapshot.repo.id>
    <snapshot.repo.url>https://oss.sonatype.org/content/repositories/snapshots</snapshot.repo.url>
    <release.repo.id>sonatype-repo</release.repo.id>
    <release.repo.url>https://oss.sonatype.org/service/local/staging/deploy/maven2</release.repo.url>
    
	<!-- SCM properties  -->
	<addTimestamp>true</addTimestamp>
	<tag>${project.artifactId}-${project.version}</tag>
	<tagBase>https://maven-confluence-plugin.googlecode.com/svn/tags</tagBase>
    
    <mavenVersion>3.0.3</mavenVersion>
    <doxiaVersion>1.0</doxiaVersion>  
    <doxia-sitetoolsVersion>1.0</doxia-sitetoolsVersion>
    <pluginToolsVersion>2.9</pluginToolsVersion>

    <jfrog.maven-plugin-anno.version>1.4.1</jfrog.maven-plugin-anno.version>

<!--  NEED FOR TEST  -->
<!--plexus.utils.version>2.0.5</plexus.utils.version-->
    <plexus.utils.version>2.1</plexus.utils.version>
  
  </properties>

<dependencyManagement>
<dependencies>

    <dependency>
      <groupId>org.jfrog.maven.annomojo</groupId>
      <artifactId>maven-plugin-anno</artifactId>
      <version>${jfrog.maven-plugin-anno.version}</version>
    </dependency>

      <dependency>
        <groupId>org.codehaus.plexus</groupId>
        <artifactId>plexus-utils</artifactId>
        <version>${plexus.utils.version}</version>
      </dependency>

    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>${mavenVersion}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.maven.plugin-tools</groupId>
      <artifactId>maven-plugin-tools-api</artifactId>
      <version>${pluginToolsVersion}</version>
    </dependency>
    
</dependencies>
</dependencyManagement>

<profiles>
      <profile>
          <id>macosx</id>
          <activation>
              <os>
                  <family>mac</family>
              </os>
          </activation>
			<properties>
			  	<java.rt.systemPath>/System/Library/Frameworks/JavaVM.Framework/Versions/CurrentJDK/Home/lib/dt.jar</java.rt.systemPath>
			</properties>
 	 </profile>
 	   
     <profile>
        <id>other-so</id>
        <activation>
          <activeByDefault>true</activeByDefault>
        </activation>
		<properties>
	  		<java.rt.systemPath />
		</properties>
	</profile>

	<profile>
		<id>release</id>
		<build>
			<plugins>

				<!-- 
				============================================================ 
				mvn -Prelease release:perform -Darguments=-Dgpg.passphrase=thephrase 
				============================================================ 
				-->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-gpg-plugin</artifactId>
					<version>1.3</version>

					<executions>
						<execution>
							<id>sign-artifacts</id>
							<phase>verify</phase>
							<goals>
								<goal>sign</goal>
							</goals>
						</execution>
					</executions>

				</plugin>


			</plugins>
		</build>
	</profile>
	
</profiles>			

<description>maven confluence plugin - parent project</description>
<url>http://code.google.com/p/maven-confluence-plugin/</url>
<issueManagement>
	<system>googlecode</system>
	<url>http://code.google.com/p/maven-confluence-plugin/issues</url>
</issueManagement>

<developers>
	<developer>
		<id>bsorrentino</id>
		<name>Bartolomeo Sorrentino</name>
		<email>bartolomeo.sorrentino@gmail.com</email>
	</developer>
</developers>
<licenses>
    <license>
      <name>Apache License Version 2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>
  
  <scm>
	<developerConnection>scm:svn:https://maven-confluence-plugin.googlecode.com/svn/trunk/maven-confluence-parent</developerConnection>
	<url>https://maven-confluence-plugin.googlecode.com/svn/trunk/maven-confluence-parent</url>
  </scm>

    <repositories>
  	<repository>
  		<id>jfrog</id>
  		<name>jfrog</name>
  		<url>http://www.jfrog.org/artifactory/plugins-releases-local</url>
  		<snapshots>
  			<enabled>false</enabled>
  		</snapshots>
  	</repository>
  </repositories>

  <pluginRepositories>
  	<pluginRepository>
  		<id>jfrog</id>
  		<name>jfrog</name>
  		<url>http://www.jfrog.org/artifactory/plugins-releases-local</url>
  		<snapshots>
  			<enabled>false</enabled>
  		</snapshots>
  	</pluginRepository>
  	<pluginRepository>
  		<id>java-net</id>
  		<url>http://download.java.net/maven/2</url>
  	</pluginRepository>
  </pluginRepositories>

  <build>
  	<plugins>
	<plugin>
	  <artifactId>maven-compiler-plugin</artifactId>
	  <version>2.3.2</version>
	  <configuration>
	    <source>1.5</source>
	    <target>1.5</target>
	  </configuration>
	</plugin>
    
  	</plugins>
  	
	<extensions>
	
	      <extension>
	        <groupId>org.jvnet.wagon-svn</groupId>
	        <artifactId>wagon-svn</artifactId>
	        <version>1.8</version>	
	      </extension>
	
	</extensions>  	
  </build>
  <modules>
  	<module>maven-confluence-core</module>
  	<!--module>maven-confluence-reporting-plugin-plugin</module-->
  	<module>maven-confluence-reporting-plugin</module>
  	<module>maven-confluence-test</module>
  </modules>
  
  <distributionManagement>
  	
    <repository>
      <id>${release.repo.id}</id>
      <name>central</name>
      <url>${release.repo.url}</url>
    </repository>
    <snapshotRepository>
      <id>${snapshot.repo.id}</id>
      <name>snapshots</name>
      <url>${snapshot.repo.url}</url>
    </snapshotRepository>
    <site>
    	<id>google-project</id>
    	<url>svn:https://maven-confluence-plugin.googlecode.com/svn/docs/3.x</url>
    </site>

  </distributionManagement>
  
</project>