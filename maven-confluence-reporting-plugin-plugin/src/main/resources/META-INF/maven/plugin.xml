<plugin>
  <description></description>
  <groupId>cosm.maven.plugin</groupId>
  <artifactId>cosm-confluence-plugin</artifactId>
  <version>1.0.0-RC1</version>
  <goalPrefix>confluence</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>plugin-doc</goal>
      <description> Generate Plugin&apos;s documentation in confluence&apos;s wiki format
 
 @author Sorrentino

</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>cosm.maven.plugin.confluence.ConfluenceGeneratePluginDocMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>outputDirectory</name>
          <type>java.lang.String</type>
          <required>true</required>
          <editable>true</editable>
          <description> Report output directory.

</description>
        </parameter>
        <parameter>
          <name>project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>true</required>
          <editable>false</editable>
          <description> The Maven Project.

</description>
        </parameter>
        <parameter>
          <name>endPoint</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description> Confluence end point url 
</description>
        </parameter>
        <parameter>
          <name>spaceKey</name>
          <type>java.lang.String</type>
          <required>true</required>
          <editable>true</editable>
          <description> Confluence target confluence&apos;s spaceKey 
</description>
        </parameter>
        <parameter>
          <name>parentPageTitle</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description> Confluence target confluence&apos;s spaceKey 
</description>
        </parameter>
        <parameter>
          <name>username</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description> Confluence username 
</description>
        </parameter>
        <parameter>
          <name>password</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description> Confluence password 
</description>
        </parameter>
      </parameters>
      <configuration>
        <password implementation="java.lang.String">${confluence.password}</password>
        <outputDirectory implementation="java.lang.String">${project.build.directory}/generated-site/confluence</outputDirectory>
        <username implementation="java.lang.String" default-value="admin">${confluence.userName}</username>
        <project implementation="org.apache.maven.project.MavenProject">${project}</project>
        <endPoint implementation="java.lang.String" default-value="http://localhost:8080/rpc/xmlrpc">${confluence.endPoint}</endPoint>
        <spaceKey implementation="java.lang.String">${confluence.spaceKey}</spaceKey>
        <parentPageTitle implementation="java.lang.String" default-value="Home">${confluence.parentPage}</parentPageTitle>
      </configuration>
      <requirements>
        <requirement>
          <role>org.apache.maven.tools.plugin.scanner.MojoScanner</role>
          <field-name>mojoScanner</field-name>
        </requirement>
        <requirement>
          <role>org.codehaus.doxia.site.renderer.SiteRenderer</role>
          <field-name>siteRenderer</field-name>
        </requirement>
      </requirements>
    </mojo>
  </mojos>
  <dependencies/>
</plugin>